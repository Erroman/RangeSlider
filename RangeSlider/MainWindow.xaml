<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:RangeSliderControls="clr-namespace:RangeSliderControls;assembly=RangeSliderControls" x:Class="RangeSlider.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="386*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <RangeSliderControls:RangeSlider x:Name="Slider"
                               Margin="50,5,0,0" 
                               LowerValue="30"
                               UpperValue="70"
                               Minimum="0"
                               Maximum="100" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="700" Grid.Row="1"/>
    </Grid>
</Window>
